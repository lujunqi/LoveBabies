<?xml version="1.0" encoding="utf-8"?> 
<shape 
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:shape="rectangle"> 
    <!-- 填充的颜色 --> 
    <solid android:color="#ffffff"/> 
    <stroke
        android:width="1dp"
        android:color="@color/green_divider" />
    <corners android:radius="10dip"/> 
