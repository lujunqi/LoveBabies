<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical" >

    <include layout="@layout/activity_my_center_head_layout" />

    <LinearLayout
        android:id="@+id/register_navigation_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reset_pwd_navigation_phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入手机号"
            android:textColor="@color/green_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/reset_pwd_navigation_phone_success_imageview"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_success_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/reset_pwd_navigation_phone_arrow_imageview"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_arrow_icon" />

        <TextView
            android:id="@+id/reset_pwd_navigation_code_success_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="输入验证码"
            android:textColor="@color/gray_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/reset_pwd_navigation_code_success_imageview"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_success_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/reset_pwd_navigation_code_arrow_imageview"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_arrow_icon" />

        <TextView
            android:id="@+id/reset_pwd_navigation_set_new_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="设置新密码"
            android:textColor="@color/gray_textcolor"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/green_divider" />
    
    <LinearLayout
        android:id="@+id/register_enter_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/orange"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_green_frame_bg" >

            <TextView
                android:id="@+id/reset_pwd_enter_phone_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="输入手机号"
                android:textColor="@color/green_textcolor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/reset_pwd_enter_phone_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/reset_pwd_enter_phone_textview"
                android:background="@null"
                android:hint="请输入您的手机号"
                android:inputType="phone"
                android:textSize="16sp" />
        </RelativeLayout>
        <Button
            android:id="@+id/reset_pwd_get_code_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_green_round_button"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="向我发送验证码"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>