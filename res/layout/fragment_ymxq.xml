<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xqj.lovebabies.widgets.TopActionBar
        android:id="@+id/activity_main_actionbar_topbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" >
    </com.xqj.lovebabies.widgets.TopActionBar>

    <ScrollView
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/activity_main_actionbar_topbar"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vaccine_20"
                android:gravity="center"
                android:text="疾病简介"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/vaccine_knowledge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#cccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vaccine_20"
                android:gravity="center"
                android:text="注意事项"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/attention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#cccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vaccine_20"
                android:gravity="center"
                android:text="注意知识"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/disease_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/vaccine_16"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/vaccine_send_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/shape_ym_xq_01"
            android:gravity="center"
            android:text="接种时间：" />

        <TextView
             android:id="@+id/is_vaccinated"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/shape_ym_xq_01"
            android:gravity="center"
            android:text="已接种" />
    </LinearLayout>

</RelativeLayout>