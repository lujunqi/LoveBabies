<?xml version="1.0" encoding="utf-8"?>
<!-- ListView tree字段 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:background="@drawable/interaction_notice_get_contact_org_bg">
    <LinearLayout 
        android:id="@+id/user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <LinearLayout 
	        android:id="@+id/user_name_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical|left"
	        android:orientation="vertical">
	        <TextView
		        android:id="@+id/tvText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxWidth="200dp"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:layout_gravity="left|center_vertical"
		        android:gravity="left|center_vertical"
		        android:textColor="@color/green_textcolor"
		        android:textSize="14dip"
		        android:text="一小班一小班"
		        />
	        <TextView
		        android:id="@+id/phone_textview"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="2dp"
		        android:maxWidth="200dp"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:layout_gravity="left|center_vertical"
		        android:gravity="left|center_vertical"
		        android:textColor="@color/gray_textcolor"
		        android:textSize="12dip"
		        android:text="13055122554"
		        android:visibility="gone"
		        />
	    </LinearLayout>
    	<ImageView
	        android:id="@+id/ivExEc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="2dip"
	        android:paddingRight="2dip"
	        android:src="@drawable/interaction_notice_get_contact_collapsed" >
	    </ImageView>
    </LinearLayout>
	
   <LinearLayout 
        android:id="@+id/user_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
    	<TextView 
		    android:id="@+id/check_all_textview"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right|center_vertical"
		    android:gravity="right|center_vertical"
	        android:layout_toRightOf="@id/ivExEc"
	        android:layout_marginRight="4dp"
	        android:text="全选"
	        android:textColor="@color/gray_textcolor"
		    android:textSize="14dip"/>
    	<ImageView
	        android:id="@+id/chbSelect"
	        android:layout_width="20dip"
	        android:layout_height="20dip"
	        android:gravity="center_vertical"
	        android:clickable="true"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:src="@drawable/interaction_notice_get_contact_checked"
	        />
   </LinearLayout>
    

</RelativeLayout>