<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
        android:id="@+id/interaction_notice_top_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/activity_main_actionbar_bg">
       
        
        <ImageView 
            android:id="@+id/interaction_notice_left_imageview"
            android:layout_width="30dp"
        	android:layout_height="30dp"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="10dp"
        	android:src="@drawable/actionbar_icon_back"
        	/>
        <TextView 
            android:id="@+id/interaction_notice_title_textview"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="详情页"
        	android:textSize="20sp"
        	android:textColor="#ffffff"/>
    </RelativeLayout>
     <ListView 
    	android:id="@+id/interaction_notice_comments_listview"
    	android:layout_width="fill_parent"
      	android:layout_height="wrap_content"
      	android:layout_marginLeft="10dp"
      	android:layout_marginRight="10dp"
      	android:paddingBottom = "6dp"
      	android:background="#F4F4F4"
      	android:dividerHeight="1dp"
        android:divider="#DEDEDE"
        android:drawSelectorOnTop="false"
        android:listSelector="#ffffff"
      	android:scrollbars="none"></ListView>
</LinearLayout>
