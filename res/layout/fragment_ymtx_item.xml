<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/vacc_age_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/vacc_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vaccine_month"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="9dip" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ym_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/is_vacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vaccine_b03"
            android:gravity="center"
            android:textSize="9dip" />

        <RelativeLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/is_vacc" >

            <TextView
                android:id="@+id/left_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vaccine_cloudb02"
                android:gravity="center"
                android:padding="25dip"
                android:textColor="#ffffff"
                android:textSize="9dip" />

            <TextView
                android:id="@+id/left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/left_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-13px"
                android:gravity="center"
                android:textSize="9dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/is_vacc" >

            <TextView
                android:id="@+id/right_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/vaccine_cloudb01"
                android:gravity="center"
                android:padding="25dip"
                
                android:textColor="#ffffff"
                android:textSize="9dip" />

            <TextView
                android:id="@+id/right_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/right_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-13px"
                android:gravity="center"
                android:textSize="9dip" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>