<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res/com.xqj.lovebabies"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:background="@drawable/activity_main_actionbar_bg"
	    android:gravity="center_vertical">
    
       <ImageView 
           android:id="@+id/head_left_imageview"
           android:layout_width="30dp"
       		android:layout_height="30dp"
       		android:layout_alignParentLeft="true"
       		android:layout_centerVertical="true"
       		android:layout_marginLeft="10dp"
       		android:src="@drawable/actionbar_icon_back"
       		/>
      
       <TextView 
           android:id="@+id/head_right_textview"
           android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentRight="true"
	       android:layout_centerVertical="true"
	       android:layout_marginRight="16dp"
	       android:textSize="20sp"
	       android:textColor="#ffffff"
	       android:text="邀请"/>
       
       <TextView 
           android:id="@+id/head_title_textview"
           android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:layout_toRightOf="@id/head_left_imageview"
	       android:layout_toLeftOf="@id/head_right_textview"
	       android:gravity="center"
	       android:textSize="20sp"
	       android:textColor="#ffffff"/>
	</RelativeLayout>
	
	<com.xqj.lovebabies.widgets.SwipeListView
        android:id="@+id/my_center_relations_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange"
        android:cacheColorHint="#00000000"
        android:divider="@color/gray_divider_2"
        android:dividerHeight="1dp"
        sp:right_width="80dp"  />
</LinearLayout>
