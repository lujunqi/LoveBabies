<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange">

    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/orange">
        
        <ImageView
	        android:id="@+id/health_pic_imageview"
	        android:layout_width="108dp"
	        android:layout_height="72dp"
	        android:layout_marginRight="4dp"
	        android:layout_marginTop="6dp"
	        android:layout_marginBottom="6dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:scaleType="fitXY"
	        android:src="@drawable/ic_launcher" />

	<LinearLayout 
	    android:id="@+id/health_title_layout"
	   	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="6dp"
    	android:layout_marginBottom="6dp" 
    	android:layout_marginLeft="6dp"
	    android:layout_marginRight="10dp"
	    android:layout_toLeftOf="@id/health_pic_imageview"
    	android:background="@color/orange" 
    	android:orientation="vertical"
    	android:gravity="center_vertical">
	     <TextView
	        android:id="@+id/health_title_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_weight="1"
	        android:textColor="#000000" 
	        android:textSize="16sp"/>
	    <TextView
	        android:id="@+id/health_from_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_marginTop="8dp"
	        android:layout_weight="1"
	        android:textColor="@color/green_textcolor" 
	        android:textSize="13sp"/>
	</LinearLayout>
   
    </RelativeLayout>
</LinearLayout>
