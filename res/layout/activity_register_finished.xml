<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical" >

    <include layout="@layout/activity_my_center_head_layout" />

    <LinearLayout
        android:id="@+id/register_navigation_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/register_navigation_check_phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机验证"
            android:textColor="@color/gray_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_navigation_check_phone_success_imageview"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_success_icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/register_navigation_check_phone_arrow_imageview"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/regist_arrow_icon" />

        <TextView
            android:id="@+id/register_navigation_set_pwd_success_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="密码设置"
            android:textColor="@color/gray_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_navigation_set_pwd_success_imageview"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_success_icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/register_navigation_set_pwd_arrow_imageview"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/regist_arrow_icon" />

        <TextView
            android:id="@+id/register_navigation_finish_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="注册完成"
            android:textColor="@color/green_textcolor"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/green_divider" />
    
    <LinearLayout
        android:id="@+id/register_finish_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/orange"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/register_success_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/green_textcolor"
            android:textSize="20sp" 
            android:text="恭喜注册成功！"
            />

        <Button
            android:id="@+id/register_finish_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_green_round_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="现在去登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>