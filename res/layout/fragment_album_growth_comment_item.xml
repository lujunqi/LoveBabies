<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_margin="5dp">
        <TextView 
            android:id="@+id/growth_comment_username_textview"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textSize="14sp"
	    	android:textColor="#E76742"
	    	android:text="小喵："/>
        <TextView 
            android:id="@+id/growth_comment_content_textview"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/growth_comment_username_textview"
	    	android:layout_marginLeft="1dp"
	    	android:textSize="14sp"
	    	android:textColor="#000000"/>
        <TextView 
            android:id="@+id/growth_comment_date_textview"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/growth_comment_content_textview"
	    	android:layout_marginTop="5dp"
	    	android:textSize="14sp"
	    	android:textColor="#B5ACA5"
	    	android:text="昨天10:30"/>
        <TextView 
            android:id="@+id/growth_comment_delete_textview"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="5dp"
	    	android:layout_below="@id/growth_comment_content_textview"
	    	android:layout_toRightOf="@id/growth_comment_date_textview"
	    	android:layout_marginLeft="20dp"
	    	android:textSize="14sp"
	    	android:textColor="#E76742"
	    	android:text="删除"/>
    </RelativeLayout>
</LinearLayout>
