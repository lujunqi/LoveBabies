<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >
    <LinearLayout 
        android:id="@+id/fragment_album_layout_top_space"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:background="@color/orange"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:orientation="vertical"
        android:background="@drawable/shape_common_notice_item_back" >
      <TextView 
	        android:id="@+id/fragment_album_textview_title"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="8dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:textStyle="bold"
	        android:textSize="16sp"
	        android:text="今天天气好好啊"
	        />
	
	    <GridView 
	        android:id="@+id/fragment_album_gridview_photos"
	        android:layout_width="wrap_content"
	        android:layout_height="300dp"
	        android:listSelector="#FFFFFFFF"
	        android:numColumns="3"
	        android:columnWidth="90dp"
	        android:verticalSpacing="2dp"  
	   	 	android:horizontalSpacing="2dp"
	   	 	android:stretchMode="none"
	   	 	android:scrollbars="none"   
	        android:layout_marginTop="8dp"
	        android:layout_marginLeft="4dp"
	        android:layout_marginBottom="4dp"
	        android:paddingRight="2dp"
	        android:paddingTop="2dp"
	        android:layout_gravity="left"></GridView>
	    
	    <LinearLayout 
	        android:id="@+id/album_growth_location_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="30dp"
	        android:gravity="center_vertical">
	        <ImageView 
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_marginLeft="4dp"
		        android:src="@drawable/growth_30"/>
	        
	        <TextView 
	            android:id="@+id/album_growth_location_textview"
	            android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:textColor="#A3A3A3"
		        android:textSize="14sp"/>
	        
	    </LinearLayout>
	    
	     <LinearLayout 
	         android:id="@+id/growth_weight_height_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="20dp"
	        android:layout_marginLeft="8dp"
	        android:gravity="center_vertical"
	        android:background="@drawable/shape_green_round_layout_bg">
	        
	         <TextView 
	            android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:gravity="center_vertical"
		        android:text="身高："
		        android:textColor="#FFFFFF"
		        android:textSize="12sp"/>
	         <TextView 
	            android:id="@+id/album_growth_height_textview"
	            android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:gravity="center_vertical"
		        android:textColor="#FFFFFF"
		        android:textSize="12sp"/>
	         
	         <TextView 
	            android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:layout_marginLeft="8dp"
		        android:gravity="center_vertical"
		        android:text="体重："
		        android:textColor="#FFFFFF"
		        android:textSize="12sp"/>
	         
	         <TextView 
	            android:id="@+id/album_growth_weight_textview"
	            android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:gravity="center_vertical"
		        android:textColor="#FFFFFF"
		        android:textSize="12sp"/>
	         
	      </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/fragment_album_relative_layout_remark"
	        android:layout_width="fill_parent"
	        android:layout_height="30dp"
	        android:gravity="center_vertical">
	        <TextView 
	            android:id="@+id/fragment_album_textview_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="8dp"
		        android:layout_alignParentLeft="true"
		        android:textColor="@color/album_date_yellow"
		        android:textSize="14sp"/>
	        
	        <TextView 
	            android:id="@+id/fragment_album_textview_age"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="10dp"
		        android:layout_alignParentRight="true"
		        android:textColor="@color/album_mark_gray"
		        android:textSize="14sp"/>
	        
	    </RelativeLayout>
	    
	        <LinearLayout 
	            android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_marginTop="8dp"
	        	android:layout_marginBottom="10dp"
	        	android:gravity="center_horizontal">
	        	 <LinearLayout 
	        	    android:id="@+id/fragment_album_layout_comment"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginRight="60dp"
		        	android:gravity="center_vertical">
	        	     <ImageView 
	        	        android:id="@+id/fragment_album_imageview_comment"
		                android:layout_width="25dp"
		        		android:layout_height="25dp"
		        		android:src="@drawable/g_speech"
		        		android:layout_marginRight="4dp"/>
		            <TextView 
		                android:id="@+id/fragment_album_textview_comment"
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:textColor="@color/album_mark_gray"
		        		android:text="评论"
		                />
	        	 </LinearLayout>
	        	 <LinearLayout 
	        	     android:id="@+id/fragment_album_layout_zan"
		             android:layout_width="wrap_content"
		        	 android:layout_height="wrap_content"
		        	 android:gravity="center_vertical">
	        	     <ImageView 
	        	         android:id="@+id/fragment_album_imageview_zan"
		                 android:layout_width="25dp"
		        		 android:layout_height="25dp"
		        		 android:src="@drawable/g_zan"
		        		 android:layout_marginRight="4dp"/>
		            <TextView 
		                android:id="@+id/fragment_album_textview_zan"
		                android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:textColor="@color/album_mark_gray"
		        		android:text="点赞"
		                />
	        	 </LinearLayout>
	    </LinearLayout>  
        
    </LinearLayout>
    
    
</LinearLayout>