<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange" >
    
   	<RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="50dp"
       android:background="@drawable/activity_main_actionbar_bg"
       android:gravity="center_vertical">
       <ImageView 
           android:id="@+id/growth_info_left_imageview"
           android:layout_width="30dp"
       	android:layout_height="30dp"
       	android:layout_alignParentLeft="true"
       	android:layout_centerVertical="true"
       	android:layout_marginLeft="10dp"
       	android:src="@drawable/actionbar_icon_back"
       	/>
      
       <ImageView 
           android:id="@+id/growth_info_right_imageview"
           android:layout_width="30dp"
	       android:layout_height="30dp"
	       android:layout_alignParentRight="true"
	       android:layout_centerVertical="true"
	       android:layout_marginRight="10dp"
	       android:src="@drawable/actionbar_icon_true"/>
       
       <TextView 
           android:id="@+id/growth_info_title_textview"
           android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:layout_toRightOf="@id/growth_info_left_imageview"
	       android:layout_toLeftOf="@id/growth_info_right_imageview"
	       android:gravity="center"
	       android:text="写一写"
	       android:textSize="20sp"
	       android:textColor="#ffffff"/>
  	 	</RelativeLayout>
	   	 	
    <ScrollView 
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:scrollbars="none">
        	
        <LinearLayout 
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:orientation="vertical">
    
	    	<EditText 
	    	    android:id="@+id/add_growth_word_record_edittext"
	        	android:layout_width="fill_parent"
	        	android:layout_height="200dp"
	        	android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
	        	android:layout_marginTop="16dp"
	        	android:layout_gravity="center_horizontal"
	        	android:gravity="top|left"
	        	android:textColorHint="#A3A3A3"
	        	android:textSize="14sp"
	        	android:paddingTop="10dip"  
	        	android:paddingLeft="5dip"  
	        	android:paddingRight="5dip"  
	        	android:paddingBottom="5dip"  
	        	android:background="@drawable/activity_add_growth_edittext_bg"
	        	android:hint="捕捉精彩的任务，就交给在下了......"/>
	
	    	<GridView 
		        android:id="@+id/fragment_album_gridview_photos"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:scrollbars="none"
		        android:listSelector="#FFFFFFFF"
		        android:numColumns="3"
		        android:columnWidth="50dp"
		        android:verticalSpacing="4dp"  
		   	 	android:horizontalSpacing="4dp"
		   	 	android:stretchMode="none"   
		        android:layout_margin="10dp"
		        android:padding="6dp"
		        android:background="@drawable/shape_common_notice_item_back"
		        android:layout_gravity="center_horizontal"></GridView>
	    
   		<RelativeLayout 
        	android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_margin="10dp"
	        android:gravity="center_vertical">
	       
   		<ImageView 
   		    android:id="@+id/add_growth_location_imageview"
   		    android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/growth_30"/>
        <TextView 
            android:id="@+id/add_growth_location_textview"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/add_growth_location_imageview"
	        android:textColor="#ABABAB"
	        android:text="显示所在位置"/>
	     <ImageSwitcher 
	         android:id="@+id/add_growth_location_image_switcher"
	         android:layout_width="60dp"
	         android:layout_height="23dp"
	         android:layout_alignParentRight="true"></ImageSwitcher>
    	</RelativeLayout>
    
    	 <LinearLayout 
        	android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="#B4B4B4"></LinearLayout>
    
    	 
    	 <LinearLayout 
        	android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_margin="10dp"
	        android:gravity="center_vertical">
	       
   		<ImageView 
   		    android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:src="@drawable/growth_13"/>
        <TextView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="2dp"
	        android:textColor="#ABABAB"
	        android:text="输入您宝宝的身高体重"/>
    	</LinearLayout>
    	
    	 
	     <LinearLayout 
	        	android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
	        	android:layout_marginRight="10dp"
	        	android:layout_marginBottom="10dp"
		        android:orientation="vertical">
	         	<LinearLayout 
		        	android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			         android:orientation="horizontal"
			         android:gravity="center_vertical">
	         	    <TextView 
	         	        android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:layout_marginRight="4dp"
		        		android:text="身高"/>
	         	    <EditText 
	         	        android:id="@+id/add_growth_height_edittext"
	         	        android:layout_width="40dp"
		        		android:layout_height="20dp"
		        		android:layout_marginRight="2dp"
		        		android:paddingLeft="5dip"  
	        			android:paddingRight="5dip" 
		        		android:background="@drawable/activity_add_growth_short_edittext_bg"
		        		android:maxLength="4"
		        		android:inputType="numberDecimal"
		        		android:textSize="14sp"/>
	         	    <TextView 
	         	        android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:text="CM"/>
	         	</LinearLayout>
	         	<LinearLayout 
		        	android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			         android:orientation="horizontal"
			         android:gravity="center_vertical">
	         	    <TextView 
	         	        android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:layout_marginRight="4dp"
		        		android:text="体重"/>
	         	    <EditText 
	         	        android:id="@+id/add_growth_weight_edittext"
	         	        android:layout_width="40dp"
		        		android:layout_height="20dp"
		        		android:layout_marginRight="2dp"
		        		android:paddingLeft="5dip"  
	        			android:paddingRight="5dip" 
		        		android:background="@drawable/activity_add_growth_short_edittext_bg"
		        		android:maxLength="4"
		        		android:inputType="numberDecimal"
		        		android:textSize="14sp"/>
	         	    <TextView 
	         	        android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:text="KG"/>
	         	</LinearLayout>
	     </LinearLayout>
     </LinearLayout>
    </ScrollView>
        	
</LinearLayout>
