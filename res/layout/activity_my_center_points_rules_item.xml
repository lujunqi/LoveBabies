<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_center_points_history_tablerow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/orange"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/my_center_point_rule_reason_layout"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:background="@color/green_bg" >

        <TextView
            android:id="@+id/my_center_point_rule_reason_textview"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/green_divider"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_center_point_rule_points_layout"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:background="@color/green_bg" >

        <TextView
            android:id="@+id/my_center_point_rule_points_textview"
            android:layout_width="47dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="+10"
            android:textColor="@color/green_divider"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_center_point_rule_limit_layout"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:background="@color/green_bg" >

        <TextView
            android:id="@+id/my_center_point_rule_limit_textview"
            android:layout_width="47dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/green_divider"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_center_point_rule_remark_layout"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="@color/green_bg" >

        <TextView
            android:id="@+id/my_center_point_rule_remark_textview"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="无"
            android:textColor="@color/green_divider"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>