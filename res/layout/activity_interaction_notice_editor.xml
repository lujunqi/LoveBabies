<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- actionbar -->
	  <include 
        layout="@layout/activity_my_center_head_layout"/>
    
	  <RelativeLayout
      		android:layout_width="fill_parent"
   			android:layout_height="wrap_content"
   			android:background="@color/orange"
	      >
	      <LinearLayout 
	      		android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_centerInParent="true"
	   			android:orientation="horizontal"
	   			android:background="@color/orange"
	   			android:paddingTop="14dp"
	   			android:paddingBottom="14dp">
	          <TextView 
	              android:id="@+id/activity_interaction_notice_editor_left_textview"
	              android:layout_width="92dp"
   				  android:layout_height="34dp"
   				  android:gravity="center"
   				  android:text="联系人"
   				  android:textColor="#ffffff" 
   				  android:textSize="15sp"
   				  android:background="@drawable/interaction_notice_left_selected"/>
	          <TextView 
	              android:id="@+id/activity_interaction_notice_editor_mid_textview"
	              android:layout_width="92dp"
   				  android:layout_height="34dp"
   				  android:gravity="center"
   				  android:text="待审核"
   				  android:textColor="@color/green_textcolor" 
   				  android:textSize="15sp"
   				  android:background="@drawable/interaction_notice_middle_normal"/>
	          <TextView 
	              android:id="@+id/activity_interaction_notice_editor_right_textview"
	              android:layout_width="92dp"
   				  android:layout_height="34dp"
   				  android:gravity="center"
   				  android:text="发送记录"
   				  android:textColor="@color/green_textcolor" 
   				  android:textSize="15sp"
   				  android:background="@drawable/interaction_notice_right_normal"/>
	      </LinearLayout>
	      
	  </RelativeLayout>
	  
	  <View 
	      android:layout_width="fill_parent"
          android:layout_height="1dp"
	      android:background="#bfbfbf"
	      />
	  
    <!-- viewpager -->
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_interaction_notice_editor_viewpager_container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" 
        android:background="#ffffff">
    </android.support.v4.view.ViewPager>

</LinearLayout>