<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical" >

    <include layout="@layout/activity_my_center_head_layout" />

    <LinearLayout
        android:id="@+id/register_navigation_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/register_navigation_check_phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机验证"
            android:textColor="@color/green_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_navigation_check_phone_success_imageview"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_success_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/register_navigation_check_phone_arrow_imageview"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/regist_arrow_icon" />

        <TextView
            android:id="@+id/register_navigation_set_pwd_success_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="密码设置"
            android:textColor="@color/gray_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/register_navigation_set_pwd_success_imageview"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/regist_success_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/register_navigation_set_pwd_arrow_imageview"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/regist_arrow_icon" />

        <TextView
            android:id="@+id/register_navigation_finish_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="注册完成"
            android:textColor="@color/gray_textcolor"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/green_divider" />
    
   

    <LinearLayout
        android:id="@+id/register_check_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/orange"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_green_frame_bg" >

            <TextView
                android:id="@+id/register_phone_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="验证码"
                android:textColor="@color/green_textcolor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/register_phone_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/register_phone_textview"
                android:background="@null"
                android:hint="请输入收到的验证码"
                android:inputType="phone"
                android:textSize="16sp" />
        </RelativeLayout>
		<TextView 
		    android:id="@+id/register_reget_code_timer_textview"
		    android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
		    android:text="30秒后可获得验证码"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/register_reget_code_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_green_round_button"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="重新获取"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register_submit_code_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_green_round_button"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="提交验证码"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>