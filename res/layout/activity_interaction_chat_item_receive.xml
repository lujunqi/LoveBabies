<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_chat_receive_textview_occurrence_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="#ffffff"
        android:text="2014-09-10 10:22:30"
        android:textSize="12sp"
        android:background="@drawable/shape_gray_round_textview_bg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical|left" >

        <ImageView
            android:id="@+id/activity_chat_receive_imageview_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/default_logo">
        </ImageView>

        <LinearLayout
            android:id="@+id/activity_chat_receive_layout_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_toRightOf="@+id/activity_chat_receive_imageview_user_icon"
            android:background="@drawable/chatfrom_bg_normal"
            android:minHeight="40.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activity_chat_receive_textview_text_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:text="222223adfadsfasdafafO(∩_∩)O" />

            <ImageView
                android:id="@+id/activity_chat_receive_imageview_image_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/ic_launcher"
                 />

           <LinearLayout 
                android:id="@+id/activity_chat_send_button_voice_content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                >
                <ImageView 
                    android:id="@+id/activity_chat_send_button_voice_content_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chart_radio_voice_pic_green"/>
                <TextView 
                    android:id="@+id/activity_chat_send_button_voice_content_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="333''"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_chat_receive_imageview_message_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/activity_chat_receive_layout_message_container"
            android:src="@drawable/chat_message_unread" />
    </RelativeLayout>

</LinearLayout>