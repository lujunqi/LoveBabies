<?xml version="1.0" encoding="utf-8"?>
<!-- 输入邀请码对话框 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout 
        android:id="@+id/fragment_content_space"
        android:layout_width="fill_parent"
    	android:layout_height="160dp"
   	 	android:orientation="vertical"
   	 	android:layout_alignParentBottom="true"
   	 	android:background="#ffffff">
        <RelativeLayout 
            android:layout_width="fill_parent"
    		android:layout_height="50dp"
    		android:background="#F1F0EE">
            <Button 
                android:id="@+id/enter_ecode_dialog_negative_button"
                android:layout_width="50dp"
    			android:layout_height="30dp"
    			android:layout_marginLeft="10dp"
    			android:layout_alignParentLeft="true"
    			android:layout_centerVertical="true"
    			android:textSize="12sp"
    			android:background="@drawable/shape_green_round_button"
    			android:text="@string/album_negative_button_text_value"
    			android:textColor="#ffffff"/>
            
             <Button 
                android:id="@+id/enter_ecode_dialog_positive_button"
                android:layout_width="50dp"
    			android:layout_height="30dp"
    			android:layout_marginRight="10dp"
    			android:layout_alignParentRight="true"
    			android:layout_centerVertical="true"
    			android:textSize="12sp"
    			android:background="@drawable/shape_green_round_button"
    			android:text="@string/album_positive_button_text_value"
    			android:textColor="#ffffff"/>
             
            <TextView 
                android:layout_toRightOf="@id/enter_ecode_dialog_negative_button"
                android:layout_toLeftOf="@id/enter_ecode_dialog_positive_button"
                android:layout_width="300dp"
    			android:layout_height="20dp"
    			android:text="发送邀请"
    			android:textSize="15sp"
    			android:textColor="#000000"
    			android:gravity="center"
    			android:layout_centerInParent="true"/>
            
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="22dp"
    		android:layout_gravity="center"
    		android:orientation="horizontal"
    		android:background="#ffffff"
            >
            <LinearLayout 
                android:id="@+id/my_center_send_invite_to_family_weixin_layout"
	            android:layout_width="90dp"
	    		android:layout_height="wrap_content"
	    		android:layout_marginBottom="10dp"
	    		android:layout_gravity="center_horizontal"
	    		android:gravity="center_horizontal"
	    		android:orientation="vertical">
                <ImageView 
                    android:layout_width="52dp"
	    			android:layout_height="52dp"
	    			android:layout_gravity="center_horizontal"
	    			android:src="@drawable/my_center_send_invite_by_weixin"/>
                <TextView 
                    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginTop="4dp"
	    			android:layout_gravity="center_horizontal"
	    			android:gravity="center_horizontal"
	    			android:textSize="16sp"
	    			android:textColor="@color/gray_textcolor"
	    			android:text="微信"/>
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/my_center_send_invite_to_family_qq_layout"
	            android:layout_width="90dp"
	    		android:layout_height="wrap_content"
	    		android:layout_marginBottom="10dp"
	    		android:layout_gravity="center_horizontal"
	    		android:orientation="vertical">
                <ImageView 
                    android:layout_width="52dp"
	    			android:layout_height="52dp"
	    			android:layout_gravity="center_horizontal"
	    			android:src="@drawable/my_center_send_invite_by_qq"/>
                <TextView 
                    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginTop="4dp"
	    			android:layout_gravity="center_horizontal"
	    			android:gravity="center_horizontal"
	    			android:textSize="16sp"
	    			android:textColor="@color/gray_textcolor"
	    			android:text="QQ"/>
            </LinearLayout>
            <LinearLayout 
                android:id="@+id/my_center_send_invite_to_family_duanxin_layout"
	            android:layout_width="90dp"
	    		android:layout_height="wrap_content"
	    		android:layout_marginBottom="10dp"
	    		android:layout_gravity="center_horizontal"
	    		android:orientation="vertical">
                <ImageView 
                    android:layout_width="52dp"
	    			android:layout_height="52dp"
	    			android:layout_gravity="center_horizontal"
	    			android:src="@drawable/my_center_send_invite_by_duanxin"/>
                <TextView 
                    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:layout_marginTop="4dp"
	    			android:layout_gravity="center_horizontal"
	    			android:gravity="center_horizontal"
	    			android:textSize="16sp"
	    			android:textColor="@color/gray_textcolor"
	    			android:text="短信"/>
            </LinearLayout>
        </LinearLayout>
       
    </LinearLayout>
	<LinearLayout 
        android:id="@+id/fragment_blank_space"
        android:layout_width="fill_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
        android:layout_below="@id/fragment_content_space"></LinearLayout>
</RelativeLayout>
